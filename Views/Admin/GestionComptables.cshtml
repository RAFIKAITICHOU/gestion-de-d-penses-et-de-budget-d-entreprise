@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Gestion du modal de suppression
            const deleteModal = document.getElementById('deleteModal');
            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const comptableId = button.getAttribute('data-comptable-id');
                    const comptableNom = button.getAttribute('data-comptable-nom');
                    const comptablePrenom = button.getAttribute('data-comptable-prenom');
                    const comptableEmail = button.getAttribute('data-comptable-email');

                    document.getElementById('comptableNom').textContent = `${comptablePrenom} ${comptableNom}`;
                    document.getElementById('comptableIdText').textContent = comptableId;
                    document.getElementById('comptableEmail').textContent = comptableEmail;
                    document.getElementById('comptableId').value = comptableId;
                });
            }

            // Fonction de recherche dans le tableau
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('keyup', function () {
                    const filter = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#comptablesTable tbody tr');

                    rows.forEach(function (row) {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(filter) ? '' : 'none';
                    });
                });
            }

            // Afficher les messages TempData si presents
            @if (TempData["Success"] != null)
                {
                    <text>showSuccessModal('@TempData["Success"]');</text>
            }
                @if (TempData["Error"] != null)
                {
                    <text>showErrorModal('@TempData["Error"]');</text>
            }
                @if (TempData["Warning"] != null)
                {
                    <text>showWarningModal('@TempData["Warning"]');</text>
            }
                @if (TempData["Info"] != null)
                {
                    <text>showInfoModal('@TempData["Info"]');</text>
            }
                        });

        // Fonctions pour afficher les modals de notification
        function showSuccessModal(message) {
            document.getElementById('successMessage').textContent = message;
            new bootstrap.Modal(document.getElementById('successModal')).show();
        }

        function showErrorModal(message) {
            document.getElementById('errorMessage').textContent = message;
            new bootstrap.Modal(document.getElementById('errorModal')).show();
        }

        function showWarningModal(message) {
            document.getElementById('warningMessage').textContent = message;
            new bootstrap.Modal(document.getElementById('warningModal')).show();
        }

        function showInfoModal(message) {
            document.getElementById('infoMessage').textContent = message;
            new bootstrap.Modal(document.getElementById('infoModal')).show();
        }
    </script>
}
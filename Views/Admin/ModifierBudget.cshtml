@model GestionBudget_V2.Models.Budget
@{
    ViewData["Title"] = "Modifier Budget";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">‚úèÔ∏è Modifier le Budget</h1>
        <a href="@Url.Action("GestionBudgets")" class="btn btn-secondary">
            ‚Ü© Retour √† la liste
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="ModifierBudget">
                        <input type="hidden" asp-for="Id_budget" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Montant_alloue" class="form-label">Montant Allou√© *</label>
                                    <input asp-for="Montant_alloue" type="number" step="0.01" class="form-control"
                                        required />
                                    <span asp-validation-for="Montant_alloue" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Date_alloue" class="form-label">Date d'Allocation *</label>
                                    <input asp-for="Date_alloue" type="date" class="form-control" required />
                                    <span asp-validation-for="Date_alloue" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-lg">
                                üíæ Modifier le Budget
                            </button>
                            <a href="@Url.Action("GestionBudgets")" class="btn btn-secondary btn-lg">
                                ‚ùå Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
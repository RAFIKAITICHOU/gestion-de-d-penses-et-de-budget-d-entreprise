@model GestionBudget_V2.Models.Comptable
@{
    ViewData["Title"] = "Modifier Comptable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-color: #4e73df;
        --primary-light: #e8eef9;
        --success-color: #1cc88a;
        --success-light: #e6f8f1;
        --secondary-color: #858796;
        --danger-color: #e74a3b;
        --warning-color: #f6c23e;
        --light-bg: #f8f9fc;
        --white: #ffffff;
        --text-dark: #2d3748;
        --text-muted: #718096;
        --border-color: #e2e8f0;
        --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.04);
        --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
        --shadow-lg: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, #6f86e8 100%);
        border-radius: 12px;
        padding: 1.5rem 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-md);
    }

    .page-header h1 {
        margin: 0;
        font-weight: 600;
        font-size: 1.5rem;
    }

    .page-header .breadcrumb {
        background: transparent;
        margin: 0;
        padding: 0;
        font-size: 0.875rem;
    }

    .page-header .breadcrumb-item,
    .page-header .breadcrumb-item a {
        color: rgba(255, 255, 255, 0.85);
    }

    .page-header .breadcrumb-item.active {
        color: #fff;
    }

    .btn-back {
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #fff;
        padding: 0.5rem 1.25rem;
        border-radius: 0.5rem;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-back:hover {
        background: rgba(255, 255, 255, 0.3);
        color: #fff;
        transform: translateX(-3px);
    }

    .form-card {
        background: #fff;
        border-radius: 0.75rem;
        box-shadow: var(--card-shadow);
        border: none;
        overflow: hidden;
    }

    .form-card-header {
        background: linear-gradient(135deg, #fff 0%, var(--light-bg) 100%);
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .form-card-header .icon-circle {
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, var(--warning-color), #e0a800);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 1.25rem;
    }

    .form-card-header h5 {
        margin: 0;
        font-weight: 600;
        color: #333;
    }

    .form-card-header p {
        margin: 0;
        font-size: 0.85rem;
        color: var(--secondary-color);
    }

    .form-card-body {
        padding: 2rem;
    }

    .section-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--warning-color);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1.25rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid var(--primary-light);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .form-label .required {
        color: var(--danger-color);
    }

    .input-group-text {
        background: var(--light-bg);
        border: 1px solid var(--border-color);
        border-right: none;
        color: var(--secondary-color);
    }

    .form-control {
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }

    .input-group .form-control {
        border-left: none;
        border-radius: 0 0.5rem 0.5rem 0;
    }

    .input-group .input-group-text {
        border-radius: 0.5rem 0 0 0.5rem;
    }

    .form-control:focus {
        border-color: var(--warning-color);
        box-shadow: 0 0 0 0.2rem rgba(246, 194, 62, 0.15);
    }

    .input-group:focus-within .input-group-text {
        border-color: var(--warning-color);
        color: var(--warning-color);
    }

    .password-wrapper {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--secondary-color);
        cursor: pointer;
        padding: 0.25rem;
        z-index: 10;
        transition: color 0.2s ease;
    }

    .password-toggle:hover {
        color: var(--warning-color);
    }

    .password-strength {
        height: 4px;
        border-radius: 2px;
        margin-top: 0.5rem;
        background: #e9ecef;
        overflow: hidden;
    }

    .password-strength-bar {
        height: 100%;
        border-radius: 2px;
        transition: all 0.3s ease;
        width: 0%;
    }

    .password-strength-text {
        font-size: 0.75rem;
        margin-top: 0.25rem;
        font-weight: 500;
    }

    .form-text {
        font-size: 0.8rem;
        color: var(--secondary-color);
        margin-top: 0.35rem;
    }

    .info-card {
        background: linear-gradient(135deg, #fff3cd 0%, #fef9e7 100%);
        border: 1px solid #ffc107;
        border-radius: 0.75rem;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .info-card h6 {
        color: #856404;
        font-weight: 600;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-card ul {
        margin: 0;
        padding-left: 1.25rem;
        color: #856404;
    }

    .info-card li {
        margin-bottom: 0.35rem;
        font-size: 0.875rem;
    }

    .comptable-info-card {
        background: linear-gradient(135deg, var(--primary-light) 0%, #f0f4ff 100%);
        border: 1px solid #c7d2fe;
        border-radius: 0.75rem;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .comptable-avatar {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--primary-color), #224abe);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 600;
        font-size: 1.25rem;
    }

    .comptable-details h6 {
        margin: 0 0 0.25rem 0;
        font-weight: 600;
        color: #333;
    }

    .comptable-details p {
        margin: 0;
        font-size: 0.85rem;
        color: var(--secondary-color);
    }

    .comptable-details .badge {
        margin-top: 0.5rem;
    }

    .btn-submit {
        background: linear-gradient(135deg, var(--warning-color), #e0a800);
        border: none;
        color: #fff;
        padding: 0.875rem 2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-submit:hover {
        background: linear-gradient(135deg, #e0a800, #c69500);
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(246, 194, 62, 0.4);
    }

    .btn-cancel {
        background: #fff;
        border: 1px solid var(--border-color);
        color: var(--secondary-color);
        padding: 0.875rem 2rem;
        border-radius: 0.5rem;
        font-weight: 500;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-cancel:hover {
        background: var(--light-bg);
        color: var(--danger-color);
        border-color: var(--danger-color);
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color);
        margin-top: 1.5rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-header {
            padding: 1.25rem;
            text-align: center;
        }

        .page-header .d-flex {
            flex-direction: column;
            gap: 1rem;
        }

        .form-card-body {
            padding: 1.25rem;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-submit,
        .btn-cancel {
            width: 100%;
            justify-content: center;
        }

        .comptable-info-card {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<div class="container-fluid">
    <!-- En-tete de page -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div>
                <h1><i class="bi bi-pencil-square me-2"></i>Modifier le Comptable</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Tableau de bord</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("GestionComptables")">Comptables</a></li>
                        <li class="breadcrumb-item active">Modifier</li>
                    </ol>
                </nav>
            </div>
            <a href="@Url.Action("GestionComptables")" class="btn-back">
                <i class="bi bi-arrow-left"></i>
                Retour a la liste
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <!-- Carte d'information du comptable -->
            <div class="comptable-info-card">
                <div class="comptable-avatar">
                    @(Model.Prenom?.Substring(0, 1).ToUpper())@(Model.Nom?.Substring(0, 1).ToUpper())
                </div>
                <div class="comptable-details">
                    <h6>@Model.Prenom @Model.Nom</h6>
                    <p><i class="bi bi-envelope me-1"></i>@Model.Email</p>
                    <span class="badge bg-primary">
                        <i class="bi bi-person-badge me-1"></i>ID: @Model.Id
                    </span>
                </div>
            </div>

            <!-- Formulaire -->
            <div class="form-card">
                <div class="form-card-header">
                    <div class="icon-circle">
                        <i class="bi bi-person-gear"></i>
                    </div>
                    <div>
                        <h5>Modification des informations</h5>
                        <p>Mettez a jour les informations du comptable</p>
                    </div>
                </div>

                <div class="form-card-body">
                    <form asp-action="ModifierComptable" id="editForm">
                        <input type="hidden" asp-for="Id" />

                        <!-- Section Identite -->
                        <div class="section-title">
                            <i class="bi bi-person"></i>
                            Informations personnelles
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nom" class="form-label">
                                    Nom <span class="required">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person-fill"></i>
                                    </span>
                                    <input asp-for="Nom" class="form-control" placeholder="Entrez le nom" required />
                                </div>
                                <span asp-validation-for="Nom" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Prenom" class="form-label">
                                    Prenom <span class="required">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input asp-for="Prenom" class="form-control" placeholder="Entrez le prenom"
                                        required />
                                </div>
                                <span asp-validation-for="Prenom" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Section Contact -->
                        <div class="section-title">
                            <i class="bi bi-envelope"></i>
                            Coordonnees
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                Adresse email <span class="required">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope-fill"></i>
                                </span>
                                <input asp-for="Email" type="email" class="form-control"
                                    placeholder="exemple@domaine.com" required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Section Securite -->
                        <div class="section-title">
                            <i class="bi bi-shield-lock"></i>
                            Securite
                        </div>

                        <div class="info-card">
                            <h6><i class="bi bi-info-circle-fill"></i> Information</h6>
                            <ul>
                                <li>Laissez le champ mot de passe vide pour conserver l'ancien</li>
                                <li>Le nouveau mot de passe doit contenir au moins 6 caracteres</li>
                                <li>Utilisez un melange de lettres, chiffres et symboles</li>
                            </ul>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MotDePasse" class="form-label">
                                Nouveau mot de passe
                                <span class="text-muted fw-normal">(optionnel)</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <div class="password-wrapper flex-grow-1 position-relative">
                                    <input asp-for="MotDePasse" type="password" class="form-control" id="passwordInput"
                                        placeholder="Entrez un nouveau mot de passe"
                                        style="border-radius: 0 0.5rem 0.5rem 0; padding-right: 40px;" />
                                    <button type="button" class="password-toggle" onclick="togglePassword()">
                                        <i class="bi bi-eye" id="toggleIcon"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="password-strength">
                                <div class="password-strength-bar" id="strengthBar"></div>
                            </div>
                            <div class="password-strength-text" id="strengthText"></div>
                            <span asp-validation-for="MotDePasse" class="text-danger small"></span>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="form-actions">
                            <button type="submit" class="btn-submit">
                                <i class="bi bi-check-circle"></i>
                                Enregistrer les modifications
                            </button>
                            <a href="@Url.Action("GestionComptables")" class="btn-cancel">
                                <i class="bi bi-x-circle"></i>
                                Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Succes -->
<div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h4 class="mb-3">Succes !</h4>
                <p class="text-muted mb-4" id="successMessage">Operation effectuee avec succes.</p>
                <button type="button" class="btn btn-success px-4" data-bs-dismiss="modal">
                    <i class="bi bi-check-lg me-2"></i>OK
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Erreur -->
<div class="modal fade" id="errorModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
                </div>
                <h4 class="mb-3">Erreur !</h4>
                <p class="text-muted mb-4" id="errorMessage">Une erreur s'est produite.</p>
                <button type="button" class="btn btn-danger px-4" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg me-2"></i>Fermer
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Avertissement -->
<div class="modal fade" id="warningModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 4rem;"></i>
                </div>
                <h4 class="mb-3">Attention !</h4>
                <p class="text-muted mb-4" id="warningMessage">Veuillez verifier les informations.</p>
                <button type="button" class="btn btn-warning px-4" data-bs-dismiss="modal">
                    <i class="bi bi-check-lg me-2"></i>Compris
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Toggle mot de passe
        function togglePassword() {
            const input = document.getElementById('passwordInput');
            const icon = document.getElementById('toggleIcon');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // Indicateur de force du mot de passe
        document.getElementById('passwordInput').addEventListener('input', function () {
            const password = this.value;
            const strengthBar = document.getElementById('strengthBar');
            const strengthText = document.getElementById('strengthText');

            let strength = 0;
            let text = '';
            let color = '';

            if (password.length === 0) {
                strengthBar.style.width = '0%';
                strengthText.textContent = '';
                return;
            }

            if (password.length >= 6) strength++;
            if (password.length >= 10) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;

            switch (strength) {
                case 0:
                case 1:
                    text = 'Faible';
                    color = '#e74a3b';
                    strengthBar.style.width = '20%';
                    break;
                case 2:
                    text = 'Moyen';
                    color = '#f6c23e';
                    strengthBar.style.width = '40%';
                    break;
                case 3:
                    text = 'Bon';
                    color = '#36b9cc';
                    strengthBar.style.width = '60%';
                    break;
                case 4:
                    text = 'Tres bon';
                    color = '#1cc88a';
                    strengthBar.style.width = '80%';
                    break;
                case 5:
                    text = 'Excellent';
                    color = '#1cc88a';
                    strengthBar.style.width = '100%';
                    break;
            }

            strengthBar.style.backgroundColor = color;
            strengthText.textContent = text;
            strengthText.style.color = color;
        });

        // Fonctions pour afficher les modals
        function showSuccessModal(message) {
            document.getElementById('successMessage').textContent = message || 'Operation effectuee avec succes.';
            new bootstrap.Modal(document.getElementById('successModal')).show();
        }

        function showErrorModal(message) {
            document.getElementById('errorMessage').textContent = message || 'Une erreur s\'est produite.';
            new bootstrap.Modal(document.getElementById('errorModal')).show();
        }

        function showWarningModal(message) {
            document.getElementById('warningMessage').textContent = message || 'Veuillez verifier les informations.';
            new bootstrap.Modal(document.getElementById('warningModal')).show();
        }

        // Affichage des messages TempData
        @if (TempData["Success"] != null)
            {
                <text>showSuccessModal("@TempData["Success"]");</text>
        }
            @if (TempData["Error"] != null)
            {
                <text>showErrorModal("@TempData["Error"]");</text>
        }
            @if (TempData["Warning"] != null)
            {
                <text>showWarningModal("@TempData["Warning"]");</text>
        }
    </script>
}
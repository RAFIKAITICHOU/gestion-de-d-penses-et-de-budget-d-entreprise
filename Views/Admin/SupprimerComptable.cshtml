@model GestionBudget_V2.Models.Comptable
@{
    ViewData["Title"] = "Supprimer Comptable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3"><i class="bi bi-trash3 me-2"></i>Supprimer le Comptable</h1>
        <a href="@Url.Action("GestionComptables")" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-start gap-3">
                        <i class="bi bi-exclamation-triangle-fill fs-3 text-warning"></i>
                        <div>
                            <h4 class="mb-1">Êtes-vous sûr de vouloir supprimer ce comptable ?</h4>
                            <p class="mb-0">Cette action est irréversible.</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5>Informations du comptable</h5>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">Nom:</dt>
                            <dd class="col-sm-8">@Model.Nom</dd>

                            <dt class="col-sm-4">Prénom:</dt>
                            <dd class="col-sm-8">@Model.Prenom</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Date de Création:</dt>
                            <dd class="col-sm-8">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</dd>
                        </dl>
                    </div>

                    <form asp-action="SupprimerComptable">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash3 me-1"></i> Confirmer la Suppression
                        </button>
                        <a href="@Url.Action("GestionComptables")" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle me-1"></i> Annuler
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
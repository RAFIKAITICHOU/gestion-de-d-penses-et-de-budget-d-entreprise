@model List<GestionBudget_V2.Models.Depense>
@{
    ViewData["Title"] = "Rapports & Statistiques";
    Layout = "~/Views/Shared/_ComptableLayout.cshtml";
    var totalDepenses = Model?.Sum(d => d.Montant) ?? 0;
    var nombreDepenses = Model?.Count ?? 0;
    var moyenneDepenses = nombreDepenses > 0 ? (Model?.Average(d => d.Montant) ?? 0) : 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="bi bi-graph-up me-2"></i>Rapports & Statistiques
        </h1>
    </div>

    <!-- Cartes de statistiques -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small mb-2">Total Dépenses</div>
                            <div class="h4 mb-0 fw-bold text-primary">
                                @totalDepenses.ToString("N2") MAD
                            </div>
                        </div>
                        <i class="bi bi-cash-stack fs-1 text-primary opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small mb-2">Nombre de Dépenses</div>
                            <div class="h4 mb-0 fw-bold text-success">
                                @nombreDepenses
                            </div>
                        </div>
                        <i class="bi bi-receipt fs-1 text-success opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small mb-2">Dépense Moyenne</div>
                            <div class="h4 mb-0 fw-bold text-info">
                                @moyenneDepenses.ToString("N2") MAD
                            </div>
                        </div>
                        <i class="bi bi-bar-chart fs-1 text-info opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small mb-2">Dernière Dépense</div>
                            <div class="h4 mb-0 fw-bold text-warning">
                                @(Model?.OrderByDescending(d => d.Date_depense).FirstOrDefault()?.Date_depense.ToString("dd/MM/yyyy") ?? "N/A")
                            </div>
                        </div>
                        <i class="bi bi-calendar fs-1 text-warning opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dépenses par catégorie -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card glass-card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-pie-chart me-1"></i>Dépenses par Catégorie
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var group in Model.GroupBy(d => d.Categorie).OrderByDescending(g => g.Sum(d => d.Montant)))
                            {
                                var categoryTotal = group.Sum(d => d.Montant);
                                var percentage = (categoryTotal / totalDepenses * 100);
                                <div class="list-group-item border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <span class="badge bg-primary me-2">
                                                <i class="bi bi-tag me-1"></i>@group.Key
                                            </span>
                                            <span class="text-muted small">@group.Count() dépense(s)</span>
                                        </div>
                                        <span class="fw-bold text-success">
                                            @categoryTotal.ToString("N2") MAD
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar" role="progressbar" style="width: @(percentage)%;">
                                        </div>
                                    </div>
                                    <small class="text-muted">@percentage.ToString("F1")% du total</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox text-muted fs-1"></i>
                            <p class="text-muted mt-2 small">Aucune dépense à afficher</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Dépenses mensuelles -->
        <div class="col-lg-6">
            <div class="card glass-card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-calendar-event me-1"></i>Dépenses par Mois
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var group in Model.GroupBy(d => new { d.Date_depense.Year, d.Date_depense.Month }).OrderByDescending(g => new DateTime(g.Key.Year, g.Key.Month, 1)))
                            {
                                var monthlyTotal = group.Sum(d => d.Montant);
                                var monthName = new DateTime(group.Key.Year, group.Key.Month, 1).ToString("MMMM yyyy", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"));
                                <div class="list-group-item border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <span class="badge bg-info me-2">
                                                <i class="bi bi-calendar3 me-1"></i>@monthName
                                            </span>
                                            <span class="text-muted small">@group.Count() dépense(s)</span>
                                        </div>
                                        <span class="fw-bold text-success">
                                            @monthlyTotal.ToString("N2") MAD
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: @(monthlyTotal / totalDepenses * 100)%;">
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox text-muted fs-1"></i>
                            <p class="text-muted mt-2 small">Aucune dépense à afficher</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau détaillé des dépenses -->
    <div class="card glass-card shadow-sm">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-table me-1"></i>Détail des Dépenses
            </h6>
        </div>
        <div class="card-body">
            @if (Model?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-hash me-1"></i>ID</th>
                                <th><i class="bi bi-calendar me-1"></i>Date</th>
                                <th><i class="bi bi-tag me-1"></i>Catégorie</th>
                                <th><i class="bi bi-text-paragraph me-1"></i>Description</th>
                                <th><i class="bi bi-currency-dollar me-1"></i>Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var depense in Model.OrderByDescending(d => d.Date_depense))
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">
                                            <i class="bi bi-hash me-1"></i>@depense.Id_depense
                                        </span>
                                    </td>
                                    <td>@depense.Date_depense.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">@depense.Categorie</span>
                                    </td>
                                    <td class="text-muted small">
                                        @(string.IsNullOrEmpty(depense.Description) ? "Aucune" : (depense.Description.Length > 30 ? depense.Description.Substring(0, 30) + "..." : depense.Description))
                                    </td>
                                    <td class="fw-bold text-success">@depense.Montant.ToString("N2") MAD</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                    <h5 class="text-muted">Aucune dépense enregistrée</h5>
                    <p class="text-muted small">Il n'y a actuellement aucune dépense à afficher.</p>
                </div>
            }
        </div>
    </div>
</div>

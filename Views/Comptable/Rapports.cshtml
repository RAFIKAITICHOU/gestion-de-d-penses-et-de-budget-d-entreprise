@model List<GestionBudget_V2.Models.Depense>
@{
    ViewData["Title"] = "Rapports & Statistiques";
    Layout = "~/Views/Shared/_ComptableLayout.cshtml";
    var totalDepenses = Model?.Sum(d => d.Montant) ?? 0;
    var nombreDepenses = Model?.Count ?? 0;
    var moyenneDepenses = nombreDepenses > 0 ? (Model?.Average(d => d.Montant) ?? 0) : 0;
}

<style>
    :root {
        --primary: #3b82f6;
        --success: #10b981;
        --info: #0ea5e9;
        --warning: #f59e0b;
        --light: #f8fafc;
        --border: #e2e8f0;
    }

    body {
        background-color: var(--light);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        border: 1px solid var(--border);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .glass-card:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }

    .card-header {
        border-bottom: 2px solid var(--border) !important;
    }

    .progress {
        background-color: #e5e7eb;
        border-radius: 4px;
    }

    .progress-bar {
        background: linear-gradient(90deg, var(--primary), var(--info));
    }

    .badge {
        padding: 6px 12px;
        font-weight: 500;
        font-size: 12px;
    }

    .table tbody tr {
        border-bottom: 1px solid var(--border);
    }

    .table tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.05);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        font-size: 32px;
    }

    .stat-icon.primary {
        background-color: rgba(59, 130, 246, 0.1);
        color: var(--primary);
    }

    .stat-icon.success {
        background-color: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .stat-icon.info {
        background-color: rgba(14, 165, 233, 0.1);
        color: var(--info);
    }

    .stat-icon.warning {
        background-color: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    .page-title {
        color: var(--primary);
        font-weight: 700;
        margin-bottom: 2rem;
    }

    .badge-primary {
        background-color: var(--primary) !important;
    }

    .badge-success {
        background-color: var(--success) !important;
    }

    .badge-info {
        background-color: var(--info) !important;
    }

    .badge-warning {
        background-color: var(--warning) !important;
    }

    .text-primary {
        color: var(--primary) !important;
    }

    .text-success {
        color: var(--success) !important;
    }

    .text-info {
        color: var(--info) !important;
    }

    .text-warning {
        color: var(--warning) !important;
    }

    @@edia
    (max-width: 768px) {
        .stat-icon {
            width: 50px;
            height: 50px;
            font-size: 24px;
        }

        .table {
            font-size: 13px;
        }

        .page-title {
            font-size: 1.5rem;
        }
    }

    @@media
    (max-width: 576px) {
        .container-fluid {
            padding: 1rem 0.5rem;
        }

        .card-body {
            padding: 1rem;
        }

        .h4 {
            font-size: 1.25rem !important;
        }
    }
</style>

<div class="container-fluid px-3 px-md-4 py-4">
    <div class="mb-4">
        <h1 class="page-title mb-1">
            <i class="bi bi-graph-up me-2"></i>Rapports & Statistiques
        </h1>
        <p class="text-muted small">Voir et analyser vos dépenses</p>
    </div>

    <!-- Cartes de statistiques -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted small mb-2">Total Dépenses</p>
                            <h4 class="fw-bold text-primary mb-0">@totalDepenses.ToString("N2") MAD</h4>
                        </div>
                        <div class="stat-icon primary">
                            <i class="bi bi-cash-stack"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted small mb-2">Nombre de Dépenses</p>
                            <h4 class="fw-bold text-success mb-0">@nombreDepenses</h4>
                        </div>
                        <div class="stat-icon success">
                            <i class="bi bi-receipt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted small mb-2">Dépense Moyenne</p>
                            <h4 class="fw-bold text-info mb-0">@moyenneDepenses.ToString("N2") MAD</h4>
                        </div>
                        <div class="stat-icon info">
                            <i class="bi bi-bar-chart"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted small mb-2">Dernière Dépense</p>
                            <h4 class="fw-bold text-warning mb-0">
                                @(Model?.OrderByDescending(d =>
                                                                d.Date_depense).FirstOrDefault()?.Date_depense.ToString("dd/MM/yyyy") ?? "N/A")
                            </h4>
                        </div>
                        <div class="stat-icon warning">
                            <i class="bi bi-calendar"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dépenses par catégorie et par mois -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-lg-6">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="bi bi-pie-chart me-2"></i>Dépenses par Catégorie
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var group in Model.GroupBy(d => d.Categorie).OrderByDescending(g => g.Sum(d =>
                                                    d.Montant)).Take(5))
                            {
                                var categoryTotal = group.Sum(d => d.Montant);
                                var percentage = (categoryTotal / totalDepenses * 100);
                                <div class="list-group-item border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <span class="badge bg-primary">@group.Key</span>
                                            <span class="text-muted small ms-2">@group.Count()</span>
                                        </div>
                                        <span class="fw-bold text-success">@categoryTotal.ToString("N2") MAD</span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar" role="progressbar" style="width: @(percentage)%;"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox text-muted" style="font-size: 2.5rem;"></i>
                            <p class="text-muted mt-2 small">Aucune dépense</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="bi bi-calendar-event me-2"></i>Dépenses par Mois
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var group in Model.GroupBy(d => new
                            {
                                d.Date_depense.Year,
                                d.Date_depense.Month
                            }).OrderByDescending(g => new DateTime(g.Key.Year, g.Key.Month, 1)).Take(5))
                            {
                                var monthlyTotal = group.Sum(d => d.Montant);
                                var monthName = new DateTime(group.Key.Year, group.Key.Month, 1).ToString("MMMM yyyy",
                                System.Globalization.CultureInfo.GetCultureInfo("fr-FR"));
                                <div class="list-group-item border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <span class="badge bg-info">@monthName</span>
                                            <span class="text-muted small ms-2">@group.Count()</span>
                                        </div>
                                        <span class="fw-bold text-success">@monthlyTotal.ToString("N2") MAD</span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar bg-info" role="progressbar"
                                            style="width: @(monthlyTotal / totalDepenses * 100)%;"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox text-muted" style="font-size: 2.5rem;"></i>
                            <p class="text-muted mt-2 small">Aucune dépense</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau des dépenses -->
    <div class="card glass-card shadow-sm">
        <div class="card-header bg-white py-3 border-0">
            <h6 class="m-0 fw-bold text-primary">
                <i class="bi bi-table me-2"></i>Détail des Dépenses
            </h6>
        </div>
        <div class="card-body">
            @if (Model?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="text-primary fw-bold">ID</th>
                                <th class="text-primary fw-bold">Date</th>
                                <th class="text-primary fw-bold">Catégorie</th>
                                <th class="text-primary fw-bold">Description</th>
                                <th class="text-primary fw-bold text-end">Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var depense in Model.OrderByDescending(d => d.Date_depense).Take(10))
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">@depense.Id_depense</span>
                                    </td>
                                    <td>@depense.Date_depense.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">@depense.Categorie</span>
                                    </td>
                                    <td class="text-muted small">
                                        @(string.IsNullOrEmpty(depense.Description) ? "—" : (depense.Description.Length > 25 ?
                                                                        depense.Description.Substring(0, 25) + "..." : depense.Description))
                                    </td>
                                    <td class="fw-bold text-success text-end">@depense.Montant.ToString("N2") MAD</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted mb-3" style="font-size: 3rem;"></i>
                    <h5 class="text-muted">Aucune dépense</h5>
                    <p class="text-muted small">Il n'y a actuellement aucune dépense à afficher.</p>
                </div>
            }
        </div>
    </div>
</div>
@model List<GestionBudget_V2.Models.Depense>
@{
    ViewData["Title"] = "Gestion des Dépenses";
    Layout = "~/Views/Shared/_ComptableLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Gestion des Dépenses</h1>
        <a href="@Url.Action("AjouterDepense")" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Ajouter une Dépense
        </a>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Dépenses
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @{
                                    var totalDepenses = Model?.Sum(d => d.Montant) ?? 0;
                                }
                                @totalDepenses.ToString("C")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-wallet2 fs-2 text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Nombre de Dépenses
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @(Model?.Count ?? 0)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-card-list fs-2 text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Dépense Moyenne
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @{
                                    var moyenne = Model?.Count > 0 ? Model.Average(d => d.Montant) : 0;
                                }
                                @moyenne.ToString("C")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-bar-chart fs-2 text-muted"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau des dépenses -->
        <div class="card shadow glass-card">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary"><i class="bi bi-journal-text me-1"></i> Liste des Dépenses</h6>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Catégorie</th>
                                <th>Description</th>
                                <th>Montant</th>
                                <th>Date Création</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var depense in Model)
                            {
                                <tr>
                                    <td>@depense.Id_depense</td>
                                    <td>@depense.Date_depense.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-primary">@depense.Categorie</span>
                                    </td>
                                    <td>@depense.Description</td>
                                    <td class="fw-bold text-success">@depense.Montant.ToString("C")</td>
                                    <td>@depense.DateCreation.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-end">
                                        <div class="d-inline-flex gap-2">
                                            <a class="btn btn-sm btn-glass" href="@Url.Action("AjouterDepense", "Comptable")">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="SupprimerDepense" asp-controller="Comptable" method="post" style="display:inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@depense.Id_depense" />
                                                <button type="submit" class="btn btn-sm btn-danger needs-confirm" data-confirm-msg="Voulez-vous vraiment supprimer cette dépense ?">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                        <div class="text-muted">
                        <i class="bi bi-wallet2 empty-icon"></i>
                        <h4 class="mt-3">Aucune dépense enregistrée</h4>
                        <p class="mb-4">Commencez par ajouter votre première dépense</p>
                        <a href="@Url.Action("AjouterDepense")" class="btn btn-primary btn-glass btn-lg">
                            <i class="bi bi-plus-lg me-1"></i> Ajouter une Dépense
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>